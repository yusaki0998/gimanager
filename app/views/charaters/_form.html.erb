<%= form_with(model: charater) do |form| %>
  <% if charater.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(charater.errors.count, "error") %> prohibited this charater from being saved:</h2>

      <ul>
        <% charater.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :image_path, style: "display: block" %>
    <%= form.file_field :image_path, accept: "image/jpeg, image/gif, image/png, image/jpg" %>
  </div>
  <%= image_tag charater.image_path.url if charater.image_path? %>

  <div>
    <%= form.label :start, style: "display: block" %>
    <%= form.number_field :start %>
  </div>

  <div>
    <%= form.label :note, style: "display: block" %>
    <%= form.text_field :note %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
