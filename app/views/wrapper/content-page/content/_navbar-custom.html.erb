                            <% end %>
                            <%= link_to new_user_registration_path, class: "dropdown-item notify-item" do %>
                                Đăng ký
                            <% end %>
                        <% end %>
                    </div>
                </li>

            </ul>
        </div>
    </div>
    <% end %>
