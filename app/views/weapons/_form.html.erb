<div class="card">
  <div class="card-body">
<%= form_with(model: weapon) do |form| %>
  <% if weapon.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(weapon.errors.count, "error") %> prohibited this weapon from being saved:</h2>

      <ul>
        <% weapon.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-2">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="mt-2">
    <%= form.label :vi_weapon_name, style: "display: block" %>
    <%= form.text_field :vi_weapon_name %>
  </div>  

  <div class="mt-2">
    <%= form.label :stars, style: "display: block" %>
    <%= form.number_field :stars %>
  </div>
  

  <div class="mt-2">
    <%= form.label :image_path, style: "display: block" %>
    <%= form.file_field :image_path, accept: "image/jpeg, image/gif, image/png, image/jpg", :size => 106 %>
  </div>
  <%= image_tag weapon.image_path.url , :size => 106 if weapon.image_path? %>

  <div class="mt-2">
    <%= form.label :note, style: "display: block" %>
    <%= form.text_field :note %>
  </div>

  <div class="mt-2">
    <%= form.submit %>
  </div>
<% end %>
</div>
</div>